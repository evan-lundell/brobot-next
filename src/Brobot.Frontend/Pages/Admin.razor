@page "/admin"
@inject ApiService ApiService
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Admin</PageTitle>

<div class="@(Loaded ? string.Empty : "hidden")">
    <div class="row my-3">
        <div class="col-12">
            <SendMessage Channels="@_channels"/>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-12">
            <UsersTable @bind-Loaded="_usersTableLoaded" />
        </div>
    </div>
    <div class="row my-3">
        <div class="col-12">
            <SecretSanta @bind-Loaded="_secretSantaLoaded"/>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-12">
            <StopWords @bind-Loaded="_stopWordsLoaded" />
        </div>
    </div>
    <div class="row my-3">
        <div class="col-12">
            <WordCloud @bind-Loaded="_wordCloudLoaded" />
        </div>
    </div>
</div>

@if (!Loaded)
{
    <p><em>Loading...</em></p>
}

@code {
    private ChannelResponse[]? _channels;
    
    private bool _usersTableLoaded;
    private bool _secretSantaLoaded;
    private bool _stopWordsLoaded;
    private bool _wordCloudLoaded;

    private bool Loaded => _channels != null && _usersTableLoaded && _secretSantaLoaded && _stopWordsLoaded && _wordCloudLoaded;
    
    protected override async Task OnInitializedAsync()
    {
        _channels = await ApiService.GetChannels();
    }
}